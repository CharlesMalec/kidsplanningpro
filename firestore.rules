// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Each authenticated user can read/write ONLY their user doc
    match /users/{uid} {
      allow create: if request.auth != null && request.auth.uid == uid;
      allow read, update, delete: if request.auth != null && request.auth.uid == uid;
    }

    // Families: only owners can read/write
    match /families/{familyId} {
      // Creating family: user must be listed in the 'owners' array they send
      allow create: if request.auth != null
        && request.auth.uid in request.resource.data.owners;

      // Reading/updating/deleting: user must already be an owner
      allow read, update, delete: if request.auth != null
        && request.auth.uid in resource.data.owners;
    }
  }
}
